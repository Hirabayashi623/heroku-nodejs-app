<!doctype html>
<html lang="ja" ng-app="myapp">
<head>
	<meta charset="UTF-8">
	<title>試験ページ</title>
	<link href="css/bootstrap.min.css" rel="stylesheet">
	<script src="./js/jquery-3.3.1.min.js"></script>
	<script src="./js/bootstrap.min.js"></script>
	<script src="https://code.angularjs.org/1.7.0/angular.min.js"></script>
	<script src="https://code.angularjs.org/1.3.15/angular-resource.min.js"></script>
	<script src="https://code.angularjs.org/1.3.15/angular-route.min.js"></script>
</head>
<body>
	<p>ユーザ一覧画面</p>
	<ul>
		<% for (var i = 0; i < users.length; i++){ %>
			<li><%= users[i].id %> <%= users[i].name %></li>
		<% } %>
	</ul>

	<div ng-controller="MainController">
		<table class="table table-bordered">
			<tr class="bg-info">
				<td>名前</td>
				<td>ID</td>
			<tr ng-repeat="user in users|filter:name">
				<td>{{user.name}}</td>
				<td>{{user.id}}</td>
			</tr>
		</table>
	</div>

	<script>
	angular.module('myapp', [])
		.controller('MainController', ['$scope',function($scope) {
			$scope.users = [ <% for (var i = 0; i < users.length; i++){ %>
				{'name': '<%= users[i].name %>', 'id': <%= users[i].id %>},
			<% } %>];
		}]);
	</script>
</body>
</html>